<h2>Edit Berry</h2>
<form action="/berries/<%= @berry.id %>" method="post">
  <input type="hidden" name="_method" value="put" />
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <p>
    <label for="berry_type">Berry Type</label>
    <input name="berry[berry_type]" id="berry_type">

    <label for="berry_color">Berry Color</label>
    <input name="berry[berry_color]" id="berry_color">

    <label for="berry_rating">Berry Rating</label>
    <input name="berry[berry_rating]" id="berry_rating">
  </p>
  <p>
    <input type="submit" value="Update Berry">
  </p>
</form>